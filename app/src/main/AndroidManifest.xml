<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Conexion"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".Loggin"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Conexion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <receiver
            android:name=".main"
            android:exported="true"
            android:label="Main"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>

        <!-- AÃ±adir el receptor de broadcast para actualizar el widget -->
        <receiver android:name=".main$UpdateWidgetReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.conexion.UPDATE_WIDGET"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".main$GetButtonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.conexion.GET_BUTTON_CLICKED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
