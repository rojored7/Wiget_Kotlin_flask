<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Texto inicial -->

    <!-- Botón que iniciará la nueva Activity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_text"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abrirpantalla" />

    <TextView
        android:id="@+id/widget_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F60000"
        android:backgroundTint="#FF0000"
        android:text="Esperando mensaje..."
        android:textColor="#000000"
        android:textColorLink="#070707"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener Valor Fijo" />

    <TextView
        android:id="@+id/text_view_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Valor" />


    <TextView
        android:id="@+id/counter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contador: 0"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incrementar contador"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Valor Fijo" />


</LinearLayout>